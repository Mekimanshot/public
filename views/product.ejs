<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container-lgx2" style="padding-top: 40px;min-height:360px;padding-bottom: 50px;">

        <a href="addproduct" class="btn btn-success">Add Product</a>

        
        <table class="table table-fit mt-5">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">NameProduct</th>
                    <th scope="col">Detail</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Price</th>
                    <th scope="col">Type</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < result.length; i++) { %>
                    <tr>
                        <td style="padding-top: 30px;">
                            <%= i+1 %>
                        </td>
                        <td style="padding-top: 30px;width: 350px">
                            <%= result[i].product %>
                        </td>
                        <td style="padding-top: 30px;width: 450px;">
                            <%= result[i].stock %>
                        </td>
                        
                        <td>
                            <form action="editproduct" method="POST" name="producttobuy">
                                
                                <input tyle="text" name="idproduct" value="" style="display:none">
                                <input type="submit" class="btn material-icons text-success" value="Edit">
                            </form>
                            <form action="delectproduct" method="POST" name="producttodelect">
                                <input tyle="text" name="idproduct" value="" style="display:none">
                                <input type="submit" class="btn material-icons text-danger" value="delete">
                            </form>
                        </td>
                    </tr>
                    <% } %>

            </tbody>
        </table>
</body>
</html>